include blocks/layout/layout
include blocks/button/button
include blocks/arrow-button/arrow-button
include blocks/percentage/percentage
include blocks/pie-chart/pie-chart
include blocks/slider/slider
include blocks/stages/stages

html
  head
    title FlatUI
  body
    +layout()
      h1 standard buttons
      +button('button', '', 'small')
      +button('button')
      +button('button', 'error')
      +button('button', 'error', 'small')
      h1 arrow buttons
      +arrow-button('left', 'inactive')
      +arrow-button('right', 'inactive')
      +arrow-button('left', 'disabled')
      +arrow-button('right', 'disabled')
      +arrow-button('left')
      +arrow-button('right')
      h1 percentages / pie chart
      +percentage(0)
      +percentage(38)
      +percentage(62)
      +percentage(89)
      +pie-chart([ 1, 3, 4, 5 ])
    +layout()
      h1 sliders
      +layout__left-column()
        +slider(true, false, '#4eb7a8')
      +layout__right-column()
        +slider(false, true, '#e75735')
    +layout()
      h1 stages
      +stages(5, 3)
