include blocks/layout/layout
include blocks/button/button
include blocks/arrow-button/arrow-button
include blocks/percentage/percentage
include blocks/pie-chart/pie-chart
include blocks/slider/slider
include blocks/stages/stages
include blocks/feedback/feedback
include blocks/toggle/toggle
include blocks/tick-box/tick-box
include blocks/search/search
include blocks/user-profile/user-profile
include blocks/drop-down/drop-down
include blocks/news/news
include blocks/event/event

html
  head
    title FlatUI
    meta(charset = 'utf-8')
  body
    +layout()
      h1 standard buttons
      +button({size: 'small'})
      +button()
      +button({type: 'error'})
      +button({type: 'error', size: 'small'})
      h1 arrow buttons
      +arrow-button({direction: 'left', condition: 'inactive'})
      +arrow-button({direction: 'right', condition: 'inactive'})
      +arrow-button({direction: 'left', condition: 'disabled'})
      +arrow-button({direction: 'right', condition: 'disabled'})
      +arrow-button({direction: 'left'})
      +arrow-button({direction: 'right'})
      h1 percentages / pie chart
      +percentage()
      +percentage({percent: 38})
      +percentage({percent: 62})
      +percentage({percent: 89})
      +pie-chart({items: [ 1, 3, 4, 5 ]})
    +layout()
      h1 sliders
      +layout__left-column()
        +slider({tooltipEnabled: true, color: '#4eb7a8'})
      +layout__right-column()
        +slider({scaleEnabled: true, color: '#e75735'})
    +layout()
      h1 stages
      +stages({length: 5, progress: 3})
    +layout()
      h1 form elements
      +layout__left-column()
        +feedback()
      +layout__right-column()
        h1 toggles
        +toggle()
        +toggle({state: true, textOn: 'yes', textOff: 'no'})
        h1 tick boxes
        +tick-box()
        +tick-box({enabled: true})
    +layout()
      +layout__left-column()
        h1 search / drop down
        +search()
        +drop-down({items: ["Choose an option", "First option", "Second option", "Third option"]})
      +layout__right-column()
        h1 user profile
        +user-profile({
          name: 'Sarah Brown',
          profession: 'developer'
        })
        +user-profile({
          name: 'John Smith',
          profession: 'ux designer',
          photo: 'face1.jpg',
          facebook: 'https://vk.com'
        })
        +user-profile({
          name: 'Sarah Brown',
          profession: 'developer',
          photo: 'face2.jpg',
          twitter: 'https://vk.com'
        })
    +layout()
      h1 news & events
      +layout__left-column()
        +news({
          image: "img1.jpg",
          title: "It's all going downhill",
          date: "24 august 2013",
          desc: "Lorem ipsum dolor sit amet, consectetur adipiscing elit," +
          " sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
        })
      +layout__right-column()
        +event({
          image: "img1.jpg",
          title: "This is the title",
          dateDay: "24",
          dateMonth: "August",
          desc: "Lorem ipsum dolor sit amet, consectetur adipiscing elit."
        })