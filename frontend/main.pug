include blocks/layout/layout
include blocks/button/button
include blocks/arrow-button/arrow-button
include blocks/percentage/percentage
include blocks/pie-chart/pie-chart
include blocks/slider/slider
include blocks/stages/stages
include blocks/feedback/feedback
include blocks/toggle/toggle
include blocks/tick-box/tick-box
include blocks/search/search
include blocks/user-profile/user-profile
include blocks/drop-down/drop-down

html
  head
    title FlatUI
    meta(charset = 'utf-8')
  body
    +layout()
      h1 standard buttons
      +button('button', '', 'small')
      +button('button')
      +button('button', 'error')
      +button('button', 'error', 'small')
      h1 arrow buttons
      +arrow-button('left', 'inactive')
      +arrow-button('right', 'inactive')
      +arrow-button('left', 'disabled')
      +arrow-button('right', 'disabled')
      +arrow-button('left')
      +arrow-button('right')
      h1 percentages / pie chart
      +percentage(0)
      +percentage(38)
      +percentage(62)
      +percentage(89)
      +pie-chart([ 1, 3, 4, 5 ])
    +layout()
      h1 sliders
      +layout__left-column()
        +slider(true, false, '#4eb7a8')
      +layout__right-column()
        +slider(false, true, '#e75735')
    +layout()
      h1 stages
      +stages(5, 3)
    +layout()
      h1 form elements
      +layout__left-column()
        +feedback()
      +layout__right-column()
        h1 toggles
        +toggle()
        +toggle({state: true, textOn: 'yes', textOff: 'no'})
        h1 tick boxes
        +tick-box()
        +tick-box({state: true})
    +layout()
      +layout__left-column()
        h1 search / drop down
        +search()
        +drop-down({items: ["Choose an option", "First option", "Second option", "Third option"]})
      +layout__right-column()
        h1 user profile
        +user-profile({
          name: 'Sarah Brown',
          profession: 'developer'
        })
        +user-profile({
          name: 'John Smith',
          profession: 'ux designer',
          photo: 'face1.jpg',
          facebook: 'https://vk.com'
        })
        +user-profile({
          name: 'Sarah Brown',
          profession: 'developer',
          photo: 'face2.jpg',
          twitter: 'https://vk.com'
        })