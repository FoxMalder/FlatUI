mixin stages(length, progress)
  -
    if (length < 2) length = 2
    if (progress <= 0) progress = 1
    if (progress > length) progress = length

  .stages(data-progress = progress)
    .stages__progress-bar
      .stages__progress
    .stages__items
      - for (var i = 0; i < length; i++)
        .stages__item(class = (progress > i) ? 'stages__item_completed' : '') #{i + 1}
