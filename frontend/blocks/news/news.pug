//-
  options.image - обложка
  options.title - название
  options.date - дата
  options.desc - описание

mixin news(options)
  if !options
    - options = {}

  .news
    .news__image
      if options.image
        img(
          src = require('./blocks/news/img/' + options.image),
          alt = 'news image'
        )
    .news__preview
      .news__title= options.title ? options.title : ''
      .news__date= options.date ? options.date : ''
      .news__description= options.desc ? options.desc : ''