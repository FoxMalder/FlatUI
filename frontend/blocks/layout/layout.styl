.layout
  max-width 700px
  min-width 300px
  margin 0 auto

  &:first-child &__center
    padding-top 7%

  &__center
    padding 0 7%
    text-align center

    & > .button
      margin-left 10px
      margin-right 10px

    & > .arrow-button
      margin-left 12px
      margin-right 12px

  & .percentage
  & .pie-chart
    margin-left 11px
    margin-right 11px

  & .toggle + .toggle
    margin-left 15px

@media screen and (min-width: 500px)
  .layout
    &__left-column
      float left
      width 50%
      padding-right 3%

    &__right-column
      float right
      width 50%
      padding-left 3%