user-profile_height = 7.8rem

.user-profile
  position relative

  display inline-flex
  align-items center

  width user-profile_height
  height user-profile_height
  border-radius 50%

  &__frame
    display flex
    align-items stretch

    overflow hidden
    width 100%
    height 100%
    border 0.4rem solid #e5e5e5
    border-radius 50%
    background url('../../img/user-icon.png') no-repeat center center
    background-size 86%
    background-color white

  &__photo
    width 100%
    border-radius 50%

  &__tooltip
    display flex
    flex-direction column
    justify-content center
    visibility hidden

    position absolute
    left 100%
    z-index 2
    margin-left 10%

    min-width 174%
    max-width 200%
    min-height 100%
    padding 0.85rem
    border-radius 0.6rem
    background-color color-first
    color white
    transition visibility 0s ease-in 0.1s

    &::before
      content ''
      display block
      position absolute
      background-color inherit
      transform rotate(45deg)
      width 0.7rem
      height 0.7rem
      left -0.3rem
      border-bottom-left-radius 0.25rem

    &:hover
      visibility visible

    &_active
      background-color #e5e5e5
      color #4f4f4f

      & .user-profile__name
        color color-second

  &:hover &__tooltip
      visibility visible

  &__name
    overflow hidden
    text-overflow ellipsis
    font-family LatoRegular, sans-serif
    font-size 1.5rem

  &__profession
    overflow hidden
    text-overflow ellipsis
    font-family LatoBlack, sans-serif
    font-weight bold
    font-size 0.95rem
    text-transform uppercase

  &__social-container
    flex-basis 100%
    display flex
    justify-content space-between
    align-items flex-end
    padding 0 20%
    padding-top 0.4rem

  &__social
    font-family FontAwesome
    font-size 2.3rem
    text-decoration none

    &_active
        color color-second
        cursor pointer

    &_facebook::after
      display block
      content '\f09a'

    &_twitter::after
      display block
      content '\f099'

    &_instagram::after
      display block
      content '\f16d'