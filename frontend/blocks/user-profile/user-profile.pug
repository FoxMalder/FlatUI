//-
  options.photo - ссылка на фото
  options.name - имя
  options.profession - профессия
  options.facebook - ссылка на страничку
  options.twitter - ссылка на страничку
  options.instagram - ссылка на страничку

mixin user-profile(options)
  if !options
    - options = {}

  .user-profile
    .user-profile__frame
      if options.photo
        img.user-profile__photo(src = require('./blocks/user-profile/img/' + options.photo), alt = 'photo')
    .user-profile__tooltip(
      class = (options.facebook || options.twitter || options.instagram) ? 'user-profile__tooltip_active' : ''
    )
      span.user-profile__name= options.name || ''
      span.user-profile__profession= options.profession || ''
      .user-profile__social-container
        a.user-profile__social.user-profile__social_facebook(
          href = options.facebook || false
          class = options.facebook ? 'user-profile__social_active' : ''
          target = '_blank'
          rel = "noopener noreferrer"
        )
        a.user-profile__social.user-profile__social_twitter(
          href = options.twitter || false
          class = options.twitter ? 'user-profile__social_active' : ''
          target = '_blank'
          rel = "noopener noreferrer"
        )
        a.user-profile__social.user-profile__social_instagram(
          href = options.instagram || false
          class = options.instagram ? 'user-profile__social_active' : ''
          target = '_blank'
          rel = "noopener noreferrer"
        )