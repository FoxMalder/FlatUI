.slider

  &__widget
    margin 0 7.5px

  & &__handle
    width 20px !important
    height 20px !important
    border-radius 50%
    border none !important
    top -7.5px !important
    margin-left -10px !important
    display flex
    justify-content center
    cursor pointer !important

    &:focus
      outline none

    &.ui-state-active
      border none
      color inherit

  & .ui-widget-content
    border none !important
    background-color #e5e5e5
    height 5px

  &__handle-tooltip
    background-color inherit
    border-radius 5px
    padding 4px 10px
    color white
    font-size 1.1rem
    font-family LatoBlack
    position absolute
    bottom 140%
    display none
    justify-content center

    &_active
      display flex

    &::before
      content ''
      display block
      background-color inherit
      transform rotate(45deg)
      width 6px
      height 6px
      position absolute
      top 89%
      border-bottom-right-radius 1px

  &__scale
    display flex
    justify-content space-between
    margin-top 9px
    padding 0 5px

  &__scale-item
    font-family LatoBlack
    font-size 0.9rem
    color #d1d1d1